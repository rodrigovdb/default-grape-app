gem 'rake'

group :development, :test do
  gem 'cpf_faker'         # Generates valid CPFs
  gem 'database_cleaner'  # Clear the DB in many different ways
  gem 'factory_bot'       # Generates data
  gem 'faker'             # Generates fake data
  gem 'grape-swagger'
  gem 'pry'
  gem 'pry-nav'
  gem 'racksh'
  gem 'reek'              # Code smells
  gem 'rspec'
  gem 'rubocop'           # Coding standards
  gem 'rubocop-factory_bot'
  gem 'rubocop-performance'
  gem 'rubocop-rake'
  gem 'rubocop-rspec'
  gem 'simplecov'         # Test coverage
  gem 'webmock'           # Avoid remote requests
end
